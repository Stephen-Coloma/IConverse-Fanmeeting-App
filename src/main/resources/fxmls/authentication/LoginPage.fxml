<HBox prefHeight="760.0" prefWidth="1300.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="authentication.view.LoginPageView">
   <children>
      <ImageView fitHeight="760.0" fitWidth="650.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../authentication/images/welcome-banner.png" />
         </image></ImageView>
        <AnchorPane maxWidth="-Infinity" minWidth="-Infinity" prefHeight="760.0" prefWidth="671.0" style="-fx-background-color: #ffffff;">
            <children>
                <VBox alignment="CENTER" layoutX="45.0" prefHeight="750.0" prefWidth="572.0">
                    <children>
                        <Label text="Account Login" textFill="#1b4994">
                            <font>
                                <Font name="Arial Black" size="40.0" />
                            </font>
                  </Label>
                        <VBox prefHeight="461.0" prefWidth="572.0">
                            <children>
                                <Label text="Username">
                                    <font>
                                        <Font name="Arial" size="19.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="40.0" />
                                    </VBox.margin>
                                </Label>
                                <TextField fx:id="usernameTextField" prefHeight="57.0" prefWidth="573.0" promptText="Enter Username" style="-fx-border-color: #bfeaf5;">
                                    <font>
                                        <Font size="22.0" />
                                    </font>
                                </TextField>
                                <Label text="Password">
                                    <font>
                                        <Font name="Arial" size="20.0" />
                                    </font>
                                    <VBox.margin>
                                        <Insets top="28.0" />
                                    </VBox.margin>
                                </Label>
                                <PasswordField fx:id="passwordField" prefHeight="57.0" prefWidth="573.0" promptText="Enter Password" style="-fx-border-color: #bfeaf5;">
                                    <font>
                                        <Font size="22.0" />
                                    </font>
                                </PasswordField>
                        <HBox alignment="CENTER">
                           <VBox.margin>
                              <Insets top="82.0" />
                           </VBox.margin>
                           <children>
                                      <Button id="logInBT" fx:id="loginButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onMouseEntered="#loginPageButtonEntered" onMouseExited="#loginPageButtonExited" prefHeight="60.0" prefWidth="287.0" text="LOG IN" textAlignment="CENTER">
                                          <font>
                                              <Font name="Arial" size="15.0" />
                                          </font>
                              </Button>
                           </children>
                        </HBox>
                                <Label fx:id="noticeLabel" textFill="RED">
                                    <VBox.margin>
                                        <Insets left="10.0" top="4.0" />
                                    </VBox.margin>
                                    <font>
                                        <Font name="Arial" size="14.0" />
                                    </font>
                                </Label>
                        <Separator prefHeight="1.0" prefWidth="519.0" style="-fx-background-color: #bfeaf5;" />
                        <HBox alignment="CENTER_LEFT" prefHeight="26.0" prefWidth="573.0">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                           <children>
                                      <Label alignment="CENTER" prefHeight="26.0" prefWidth="166.0" text="Forgot Password" underline="true">
                                          <font>
                                              <Font name="Arial" size="17.0" />
                                          </font>
                                 <HBox.margin>
                                    <Insets left="10.0" />
                                 </HBox.margin>
                                      </Label>
                           </children>
                        </HBox>
                            </children>
